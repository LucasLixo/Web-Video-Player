{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "module": "es2015",
    "outDir": "./build/",
    // "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    // "noEmit": true,
    "noUnusedLocals": false, 
    "noUnusedParameters": false,
    "rootDir": "./src/",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
